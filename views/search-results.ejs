<!DOCTYPE html>
<html lang="es">
	<%- include('./partials/head')  %>
<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<% for (let i = 0; i < results.length; i++) { %>
				<div class="col-12 col-sm-6 col--lg-3">
					<section class="products-box">
						<a href="/catalogo/detalle<%= results[i].id%>">
							<figure class="products-box-img">                        <!--ver nombre con la base de datos-->
								<img src="/Proyecto_Final_Grupo_2/public/images/products <%= results[i].productImagen %>" alt="<%=results[i].nombre%>">
							</figure>     <!--Es lo mismo que: /images/products/?-->
							<article class="products-box-data">
								<h2>Producto: <%=results[i].productNombre%></h2>
								<p>Descripcion: <%= results[i].productDescription %></p>
								<p><a href="/users/profile/<% results[i].id %>"> Usuario: <%= results[i].id %> </a></p>
							</article>
						</a>
					</section>
				
		  <% } %>


	<%- include('./partials/footer')  %>
</body>

</html>