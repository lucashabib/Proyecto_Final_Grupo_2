<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
					<img src="/images/logo.jpg">
					<p>LA MAQUINA RETRO</p>
				</a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/products/search" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más"
                        class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    <i class="fas fa-hand-holding-usd"></i>
                    Todas las opiniones en un solo lugar.
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbarLogin">
            <div>
                <li><a href="/products/add" class="texto_header">Agregar productos</a></li>
            </div>
            <div>
				<li><a href="/products/" class="texto_header">Todos los productos</a></li>
			</div>
            <div>
                <li class="saludo">
                    <strong><p class="texto_header">Bienvenido <%= user.nombre %>! </p></strong>
                </li>
            </div>
            <div>
                <li class="perfil">
                    <li><a href="/users/perfil" class="texto_header">Mi Perfil</a></li>
                </li>
            </div>
            <div>
                <form action="/users/logout" method="POST">
                    <button class="logout" type="submit" class="texto_header">Cerrar sesión <i class="fas fa-sign-in-alt"></i></button>
                </form>
            </div>
        </nav>
    </div>
</header>



