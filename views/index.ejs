<!DOCTYPE html>
<html lang="es">
	<%- include('./partials/head')  %>
<body>
	
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->
	<div class="titulo">
		<h1 class="ultimos_title"> ULTIMOS INGRESOS</h1>
	</div>
	<!-- Novedades -->
	<div class="row">
		<% if (products && products.length > 0) { %>
			<% for (let i = 0; i < products.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= products[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= products[i].imagen %>" alt="<%= products[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= products[i].nombre %></h2>
								<p><%= products[i].descripcion %></p>
								<p>Usuario: <%= products[i].user.nombre %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		<% } else { %>
			<p>No hay productos disponibles.</p>
		<% } %>
	</div>			

	<%- include('./partials/footer')  %>
</body>	
</html>